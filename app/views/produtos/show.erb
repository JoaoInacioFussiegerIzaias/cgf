<% if @p %>
  <!-- Centralizando o card do produto -->
  <div class="flex justify-center items-center mt-12">
    <div class="max-w-sm w-full md:w-1/3 p-6 bg-white border border-gray-200 rounded-lg shadow text-black">
      <!-- Exibindo a imagem do produto -->
      <div class="flex justify-center items-center mb-4">
        <% if @p.imagem %>
          <%= image_tag @p.imagem, class: "w-full h-auto rounded-lg" %>
        <% else %>
          <p>Imagem não disponível</p>
        <% end %>
      </div>
      <ol>
        <li>
          <p><strong>Nome:</strong> <%= @p.name %> </p>
          <p><strong>Preço:</strong> <%= @p.price %></p>
          <p><strong>Quantidade em estoque:</strong> <%= @p.quantity %></p>
        </li>
      </ol>
    </div>
  </div>

  <!-- Centralizando o botão de "Voltar" -->
  <div class="flex justify-center items-center mt-4">
    <%= link_to 'Voltar para a lista de produtos', produtos_path, class: "bg-red-600 hover:bg-red-700 text-white font-bold py-1 px-6 rounded" %>
  </div>

<% else %>
  <p>Produto não encontrado.</p>
<% end %>
