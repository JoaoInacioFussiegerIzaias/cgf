<div class="p-12">
  <% @p.each do |produto| %>
    <%= link_to "/produtos/#{produto.id}", class: "max-w-sm w-full md:w-1/3 p-6 bg-white border border-black-200 rounded-lg shadow text-black block hover:cursor-pointer" do %>
      <div class="mb-6">
        <img src="<%= produto.imagem %>" alt="<%= produto.name %>" class="w-full h-auto rounded-lg">

        <!-- Detalhes do produto -->
        <strong>Nome:</strong> <%= produto.name %> <br>
        <strong>Pre√ßo:</strong> R$ <%= produto.price %> <br>
        <strong>Quantidade:</strong> <%= produto.quantity %>
      </div>
    <% end %> <!-- Final do link_to -->
  <% end %>
</div>
