<h1 class="text-2xl font-bold text-white mb-6">Lista de Produtos</h1>

<div class="flex flex-wrap gap-4 p-4">
  <% @p.each do |produto| %>
    <%= link_to "/produtos/#{produto.id}", class: "max-w-sm w-full md:w-1/3 p-6 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700 text-white block hover:cursor-pointer" do %>

      <!-- Verifica se o id do produto é 1 e exibe a imagem específica -->
      <% if produto.id == 1 %>
        <div class="mb-4">
          <img src="bola_futsal_penalty_brasil_70_r1_510016_1191_2.webp" alt="Produto 1" class="w-full h-auto rounded-lg">
        </div>
      <% end %>

      <!-- Verifica se o id do produto é 4 e exibe a imagem específica -->
      <% if produto.id == 4 %>
        <div class="mb-4">
          <img src="bca5adbc11.webp" alt="Produto 2" class="w-full h-auto rounded-lg">
        </div>
      <% end %>

      <!-- Detalhes do produto -->
      <strong>Nome:</strong> <%= produto.name %> <br>
      <strong>Preço:</strong> R$ <%= produto.price %> <br>
      <strong>Quantidade:</strong> <%= produto.quantity %>

    <% end %> <!-- Final do link_to -->
  <% end %>
</div>
